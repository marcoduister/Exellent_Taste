@model IEnumerable<Exellent_Taste.Models.Bestellingen>

@{
    ViewData["Title"] = "Bestelling overzicht";
}
<p>
    <a asp-action="Create">Create New</a>
</p>
<dd class="col-sm-12">
    <a asp-action="barmanview" asp-controller="Bestellings_Lijst" style="width:150px;height:27px">Barman Overzicht</a>
</dd>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tafel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Totaal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tafel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Totaal)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Bon</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
