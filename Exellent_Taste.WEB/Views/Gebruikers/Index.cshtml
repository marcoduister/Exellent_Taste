@model IEnumerable<Exellent_Taste.Models.Gebruikers>
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Overzicht gebruikers";
}

<div class="card mb-4">
    <a class="card-header" asp-action="Create"><i class="fas fa-table mr-1"></i>Create New</a>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Voornaam)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Achternaam)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Wachtwoord)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Voornaam)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Achternaam)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Wachtwoord)
                        </td>
                        @if (item.ID.ToString() != Context.Session.GetString("GebruikersId"))
                        {
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                            </td>
                        }
                        else
                        {
                            <td></td>
                        }
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
